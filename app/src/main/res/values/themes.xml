<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Базовая тема приложения -->
    <style name="Theme.ArmzonRPMobile" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Цвета -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Дополнительные настройки -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <!-- Стиль для основной кнопки -->
    <style name="ButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/purple_500</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Стиль для круглых социальных кнопок -->
    <style name="SocialButtonStyle" parent="Widget.Material3.Button.Icon">
        <item name="iconSize">28dp</item>
        <item name="iconPadding">0dp</item>
        <item name="backgroundTint">@color/social_button_bg</item>
        <item name="rippleColor">@color/social_button_ripple</item>
        <item name="android:layout_margin">8dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.SmallComponent</item>
    </style>
</resources>